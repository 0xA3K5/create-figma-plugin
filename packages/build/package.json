{
  "name": "@create-figma-plugin/build",
  "version": "2.1.3",
  "publishConfig": {
    "access": "public"
  },
  "description": "Build a Figma/FigJam plugin/widget",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/build"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "build-figma-plugin": "lib/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --build",
    "clean": "rimraf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.{ts,tsx}' && prettier --loglevel error --write '*.json' 'src/**/*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.{ts,tsx}'",
    "test": "npm run build && ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^2.1.3",
    "chokidar": "^3.5.3",
    "cssnano": "^5.1.13",
    "esbuild": "^0.15.12",
    "find-up": "^6.3.0",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "import-fresh": "^3.3.0",
    "indent-string": "^5.0.0",
    "kleur": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-modules": "^5.0.0",
    "rev-hash": "^4.0.0",
    "sade": "^1.8.1",
    "temp-write": "^5.0.0",
    "tempy": "^3.0.0",
    "typed-css-modules": "^0.7.2"
  },
  "devDependencies": {
    "@create-figma-plugin/tsconfig": "^2.1.3",
    "@create-figma-plugin/utilities": "^2.1.3",
    "@figma/plugin-typings": "1.54.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.3",
    "@types/react": "^18.0.21",
    "@types/rimraf": "^3.0.2",
    "ava": "^4.3.3",
    "eslint": "^8.26.0",
    "eslint-config-yuanqing": "^0.0.6",
    "preact": "^10.11.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@figma/plugin-typings": "^1",
    "typescript": "^4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
