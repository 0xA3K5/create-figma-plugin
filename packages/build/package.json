{
  "name": "@create-figma-plugin/build",
  "version": "1.8.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "Build a Figma/FigJam plugin/widget",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/build"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "build-figma-plugin": "lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "rm -rf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.{ts,tsx}' && prettier --loglevel error --write '*.json' 'src/**/*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.{ts,tsx}'",
    "test": "yarn run build && ava 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^1.8.2",
    "chokidar": "^3.5.3",
    "cssnano": "^5.0.15",
    "esbuild": "^0.14.12",
    "find-up": "^6.2.0",
    "fs-extra": "^10.0.0",
    "globby": "^12.2.0",
    "indent-string": "^5.0.0",
    "kleur": "^4.1.4",
    "postcss": "^8.4.5",
    "postcss-modules": "^4.3.0",
    "rev-hash": "^4.0.0",
    "sade": "^1.8.1",
    "temp-write": "^5.0.0",
    "tempy": "^2.0.0",
    "typed-css-modules": "^0.7.0"
  },
  "devDependencies": {
    "@create-figma-plugin/tsconfig": "^1.8.2",
    "@create-figma-plugin/utilities": "^1.8.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.10",
    "@types/rimraf": "^3.0.2",
    "ava": "^3.15.0",
    "eslint": "^8.7.0",
    "eslint-config-yuanqing": "^0.0.6",
    "preact": "^10.6.4",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "tsm": "^2.2.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@figma/plugin-typings": "^1",
    "typescript": "^4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "tsm"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "serial": true,
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
