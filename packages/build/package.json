{
  "name": "@create-figma-plugin/build",
  "version": "0.0.43",
  "publishConfig": {
    "access": "public"
  },
  "description": "Build a Figma plugin",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/build"
  },
  "files": [
    "lib",
    "src"
  ],
  "bin": {
    "create-figma-plugin-build": "lib/cli.js"
  },
  "scripts": {
    "clean": "rimraf 'test/fixtures/*/{build,manifest.json,node_modules}'",
    "fix": "prettier-standard '{src,test}/**/*.js'",
    "lint": "standardx '{src,test}/**/*.js'",
    "test": "yarn run clean && ava"
  },
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@create-figma-plugin/common": "^0.0.43",
    "@create-figma-plugin/utilities": "^0.0.43",
    "babel-loader": "^8.0.6",
    "chokidar": "^3.3.1",
    "css-loader": "^3.4.0",
    "find-up": "^4.1.0",
    "fs-extra": "^8.1.0",
    "sade": "^1.7.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.2",
    "temp-write": "^4.0.0",
    "terser-webpack-plugin": "^2.3.1",
    "webpack": "^4.41.5"
  },
  "peerDependencies": {
    "preact": "^10.1.1"
  },
  "ava": {
    "files": [
      "test/**/*.js",
      "!**/fixtures/**"
    ],
    "verbose": true,
    "require": [
      "esm",
      "../common/src/silence-logging.js"
    ]
  }
}
