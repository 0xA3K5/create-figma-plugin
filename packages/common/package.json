{
  "name": "@create-figma-plugin/common",
  "version": "2.1.6-alpha.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Internal utilities for the Create Figma Plugin toolkit",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/common"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "lib"
  ],
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run generate-index-ts && tsc --build",
    "clean": "rimraf '*.log' lib tsconfig.tsbuildinfo",
    "generate-index-ts": "node --loader ts-node/esm ../../scripts/generate-index-ts.ts -- 'src/**/*.ts' && eslint --fix src/index.ts",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "npm run build && ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@sindresorhus/slugify": "2.1.1",
    "fs-extra": "^10.1.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.3",
    "ava": "^4.3.3",
    "eslint": "^8.26.0",
    "eslint-config-yuanqing": "^0.0.6",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
