{
  "name": "@create-figma-plugin/utilities",
  "version": "1.5.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "An extensive library of utility functions for common Figma/FigJam plugin operations",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/utilities"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib"
  ],
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "build": "yarn run clean && yarn run interpolate-gumroad-script && yarn run generate-index-ts && tsc --build",
    "clean": "rm -rf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{scripts,src,test}/**/*.{js,ts}' && prettier --loglevel error --write '*.json'",
    "generate-docs": "node --loader ts-node/esm scripts/generate-docs.ts",
    "generate-index-ts": "node --loader ts-node/esm ../../scripts/generate-index-ts.ts -- 'src/**/*.ts' '!src/**/private/**/*' && eslint --fix src/index.ts",
    "interpolate-gumroad-script": "node --loader ts-node/esm scripts/interpolate-gumroad-script.ts",
    "lint": "eslint '{scripts,src,test}/**/*.{js,ts}'",
    "test": "yarn run build && ava 'test/**/*.ts'"
  },
  "dependencies": {
    "hex-rgb": "^5.0.0",
    "natural-compare-lite": "1.4.0",
    "rgb-hex": "^4.0.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "1.37.0",
    "@types/fs-extra": "^9.0.13",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/node": "^16.10.3",
    "ava": "^3.15.0",
    "esbuild": "~0.13.4",
    "eslint": "^7.32.0",
    "eslint-config-yuanqing": "^0.0.5",
    "fs-extra": "^10.0.0",
    "generate-ts-docs": "^0.0.13",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "serial": true,
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "sideEffects": false
}
