{
  "name": "@create-figma-plugin/utilities",
  "version": "0.0.68",
  "publishConfig": {
    "access": "public"
  },
  "description": "Utility functions for common Figma plugin operations",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/utilities"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "yarn run clean-build && yarn run clean-test",
    "clean-build": "rimraf '*.log' lib tsconfig.tsbuildinfo",
    "clean-test": "rimraf .nyc_output coverage",
    "fix": "prettier-standard '{src,test}/**/*.ts' && prettier --write '*.json' 'test/fixtures/**/*.json'",
    "lint": "standardx '{src,test}/**/*.ts'",
    "test": "tap 'test/**/*.ts' --coverage-report html --coverage-report text --no-browser --reporter terse"
  }
}
