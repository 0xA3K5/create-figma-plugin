{
  "name": "create-figma-plugin",
  "version": "2.1.3",
  "description": "Initialize a new Figma/FigJam plugin/widget using a template",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/create-figma-plugin"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "lib",
    "templates",
    "templates/**/*/.gitignore"
  ],
  "bin": {
    "create-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --build",
    "clean": "rimraf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "npm run build && ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^2.1.3",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "inquirer": "^9.1.0",
    "is-utf8": "^0.2.1",
    "kleur": "^4.1.4",
    "lodash.template": "^4.5.0",
    "package-json": "^8.1.0",
    "param-case": "^3.0.4",
    "sade": "^1.8.1",
    "semver": "^7.3.7",
    "title-case": "^3.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.1",
    "@types/lodash.template": "^4.5.1",
    "@types/node": "^18.7.8",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.12",
    "ava": "^4.3.1",
    "eslint": "^8.22.0",
    "eslint-config-yuanqing": "^0.0.6",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "ignorePatterns": [
      "templates"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
