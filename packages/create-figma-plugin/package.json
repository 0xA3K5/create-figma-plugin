{
  "name": "create-figma-plugin",
  "version": "2.5.1",
  "description": "Initialize a new Figma/FigJam plugin/widget using a template",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/create-figma-plugin"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib",
    "templates",
    "templates/**/*/.gitignore"
  ],
  "bin": {
    "create-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "clean": "rimraf '*.log' .turbo lib tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:js npm:fix:json",
    "fix:js": "eslint --fix '{src,test}/**/*.ts'",
    "fix:json": "prettier --loglevel error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "pretest": "npm run build",
    "test": "ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^2.5.1",
    "globby": "^13.1.4",
    "inquirer": "^9.2.6",
    "is-utf8": "^0.2.1",
    "kleur": "^4.1.5",
    "lodash.template": "^4.5.0",
    "package-json": "^8.1.0",
    "param-case": "^3.0.4",
    "path-exists": "^5.0.0",
    "sade": "^1.8.1",
    "semver": "^7.5.1",
    "title-case": "^3.0.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/is-utf8": "^0.2.1",
    "@types/lodash.template": "^4.5.1",
    "@types/node": "^20.2.4",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "ava": "^5.3.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-yuanqing": "0.0.8",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "tsx"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "templates"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
