{
  "name": "create-figma-plugin",
  "version": "1.7.0-alpha.0",
  "description": "Initialize a new Figma/FigJam plugin/widget using a template",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/create-figma-plugin"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib",
    "templates",
    "templates/*/.gitignore"
  ],
  "bin": {
    "create-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "rm -rf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "yarn run build && ava 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^1.7.0-alpha.0",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.2",
    "inquirer": "^8.2.0",
    "is-utf8": "^0.2.1",
    "mustache": "^4.2.0",
    "package-json": "^7.0.0",
    "sade": "^1.7.4",
    "semver": "^7.3.5",
    "title-case": "^3.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.1.3",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.10.3",
    "@types/rimraf": "^3.0.2",
    "@types/sade": "^1.7.3",
    "@types/semver": "^7.3.8",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "eslint-config-yuanqing": "^0.0.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "serial": true,
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "ignorePatterns": [
      "templates"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
