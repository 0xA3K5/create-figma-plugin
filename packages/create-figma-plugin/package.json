{
  "name": "create-figma-plugin",
  "version": "1.8.2",
  "description": "Initialize a new Figma/FigJam plugin/widget using a template",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/create-figma-plugin"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib",
    "templates",
    "templates/**/*/.gitignore"
  ],
  "bin": {
    "create-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "rm -rf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "yarn run build && ava 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^1.8.2",
    "fs-extra": "^10.0.0",
    "globby": "^13.1.0",
    "inquirer": "^8.2.0",
    "is-utf8": "^0.2.1",
    "lodash.template": "^4.5.0",
    "package-json": "^7.0.0",
    "param-case": "^3.0.4",
    "sade": "^1.8.1",
    "semver": "^7.3.5",
    "title-case": "^3.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/lodash.template": "^4.5.0",
    "@types/node": "^17.0.13",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.9",
    "ava": "^3.15.0",
    "eslint": "^8.8.0",
    "eslint-config-yuanqing": "^0.0.6",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tsm": "^2.2.1",
    "typescript": "^4.5.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "tsm"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "serial": true,
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "ignorePatterns": [
      "templates"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
