{
  "private": true,
  "name": "website",
  "version": "1.8.2",
  "type": "module",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/html-minifier": "^4.0.2",
    "@types/lodash.template": "^4.5.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.5.1",
    "cpy-cli": "^3.1.1",
    "esbuild": "^0.14.8",
    "eslint": "^8.5.0",
    "eslint-config-yuanqing": "^0.0.6",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.2",
    "gray-matter": "^4.0.3",
    "html-minifier": "^4.0.0",
    "lodash.template": "^4.5.0",
    "markdown-interpolate": "^0.0.7",
    "mdast": "^3.0.0",
    "mdast-util-toc": "^6.1.0",
    "node-fetch": "^3.1.0",
    "prettier": "^2.5.1",
    "rehype": "^12.0.0",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-highlight": "^5.0.1",
    "rehype-slug": "^5.0.0",
    "remark-external-links": "^9.0.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-stringify": "^10.0.2",
    "sirv-cli": "^1.0.14",
    "stylelint": "^14.2.0",
    "stylelint-config-yuanqing": "^0.0.3",
    "tsm": "^2.2.1",
    "typescript": "^4.5.4",
    "unified": "^10.1.1"
  },
  "scripts": {
    "build": "yarn run clean && concurrently npm:build-*",
    "build-css": "esbuild --bundle src/css/style.css --minify --outfile=build/create-figma-plugin/style.css",
    "build-html": "node --loader tsm scripts/build-html/build-html.ts create-figma-plugin",
    "build-js": "esbuild --bundle src/js/script.js --minify --outfile=build/create-figma-plugin/script.js",
    "build-media": "cpy 'media/**/*.png' build/create-figma-plugin/media",
    "clean": "rm -rf '*.log' build",
    "fix": "eslint --fix 'scripts/**/*.ts' 'src/**/*.js' && stylelint --fix 'src/**/*.css' && yarn run fix-data",
    "fix-data": "node --loader tsm scripts/prettify-data.ts data/plugins.json && node --loader tsm scripts/prettify-data.ts data/widgets.json",
    "lint": "eslint 'scripts/**/*.ts' 'src/**/*.js' && stylelint 'src/**/*.css'",
    "scrape-plugins": "node --loader tsm scripts/scrape/scrape.ts plugin data/plugins.json",
    "scrape-widgets": "node --loader tsm scripts/scrape/scrape.ts widget data/widgets.json",
    "serve": "sirv build --dev --host --port 4242",
    "watch": "concurrently npm:watch-*",
    "watch-css": "chokidar --command 'yarn run build-css' --initial --silent 'src/**/*.css'",
    "watch-html": "chokidar --command 'yarn run build-html' --initial --silent 'data/**/*' 'docs/**/*' 'scripts/**/*' 'src/**/*.html'",
    "watch-js": "chokidar --command 'yarn run build-js' --initial --silent 'src/**/*.js'",
    "watch-media": "chokidar --command 'yarn run build-media' --initial --silent 'media/**/*.png'"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
