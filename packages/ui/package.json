{
  "name": "@create-figma-plugin/ui",
  "version": "0.0.47",
  "publishConfig": {
    "access": "public"
  },
  "description": "A Preact implementation of the Figma design system for use in Figma plugins",
  "keywords": [
    "component",
    "component-library",
    "create-figma-plugin",
    "design-system",
    "figma",
    "figma-plugin",
    "figma-plugin-ds",
    "figma-plugins",
    "figma-ui",
    "form",
    "preact",
    "ui"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/ui"
  },
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "scripts": {
    "build": "mkdirp node_modules && build-storybook --output-dir build",
    "fix": "concurrently --raw 'yarn run fix-css' 'yarn run fix-js'",
    "fix-css": "prettier --write 'src/**/*.scss'",
    "fix-js": "prettier-standard '{.storybook,src}/**/*.js'",
    "lint": "concurrently --raw 'yarn run lint-css' 'yarn run lint-js'",
    "lint-css": "stylelint 'src/**/*.scss'",
    "lint-js": "standardx '{.storybook,src}/**/*.js'",
    "start": "mkdirp node_modules && start-storybook"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "^0.0.47",
    "@sindresorhus/class-names": "^1.1.0"
  },
  "peerDependencies": {
    "preact": "^10.1.1"
  },
  "sideEffects": [
    "./src/scss/{base,font-face,reset}.scss"
  ]
}
