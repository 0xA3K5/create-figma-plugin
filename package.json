{
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "bump-dependencies": "node scripts/bump-dependencies.js",
    "clean": "lerna run clean && lerna run --scope @create-figma-plugin/ui storybook-clean && rimraf '*.log'",
    "insert-toc": "node scripts/insert-toc.js",
    "fix": "lerna run fix && eslint --fix 'scripts/**/*.js' && prettier --loglevel error --write '*.json'",
    "lint": "lerna run lint && eslint 'scripts/**/*.js'",
    "postinstall": "yarn run build",
    "publish": "yarn run build && cpy 'docs/**/*.md' README.md packages/create-figma-plugin --parents && lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf node_modules yarn.lock && yarn install",
    "test": "yarn run build && lerna run test",
    "version": "lerna version"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.15.0",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/preact": "^5.3.18",
    "@storybook/source-loader": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@teamsupercell/typings-for-css-modules-loader": "^2.1.1",
    "@types/fs-extra": "^8.1.0",
    "@types/git-user-name": "^2.0.0",
    "@types/inquirer": "^6.5.0",
    "@types/mustache": "^4.0.1",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/npmlog": "^4.1.2",
    "@types/rimraf": "^3.0.0",
    "@types/sade": "^1.6.0",
    "@types/tap": "^14.10.0",
    "@types/terser-webpack-plugin": "^2.2.0",
    "chokidar-cli": "^2.1.0",
    "cpy-cli": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-config-yuanqing": "0.0.1",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "markdown-toc": "^1.2.0",
    "mkdirp": "^1.0.4",
    "npm-check-updates": "^4.1.2",
    "preact": "^10.4.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "tap": "^14.10.7",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^2.3.0"
  },
  "eslintConfig": {
    "extends": "yuanqing",
    "ignorePatterns": [
      "*.scss.d.ts",
      "packages/create-figma-plugin/plugin-templates"
    ],
    "rules": {
      "react/no-unknown-property": [
        2,
        {
          "ignore": [
            "class",
            "clip-rule",
            "fill-rule"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.scss": [
      "stylelint",
      "prettier"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended",
      "stylelint-config-rational-order"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
