{
  "private": true,
  "scripts": {
    "build": "lerna exec -- babel src --out-dir lib --delete-dir-on-start --ignore '**/__tests__/**/*.js' --plugins @babel/plugin-transform-modules-commonjs",
    "clean": "rimraf .nyc_output '*.log' 'packages/*/lib' 'packages/**/__fixtures__/**/{build,figma-plugin,manifest.json}'",
    "coverage": "yarn run build && nyc --exclude 'packages/*/lib' --exclude 'packages/**/__tests__/**/*.js' -- ava",
    "fix": "prettier-standard 'packages/*/src/**/*.js' '!packages/**/__fixtures__/**'",
    "lint": "standard 'packages/*/src/**/*.js'",
    "publish": "cpy README.md packages/create-figma-plugin && lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf yarn.lock node_modules && yarn install",
    "test": "yarn run build && ava",
    "version": "lerna version"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "ava": "^2.2.0",
    "cpy-cli": "^2.0.0",
    "esm": "^3.2.25",
    "husky": "^3.0.1",
    "lerna": "^3.16.2",
    "lint-staged": "^9.2.0",
    "nyc": "^14.1.1",
    "prettier-standard": "^9.1.1",
    "rimraf": "^2.6.3",
    "standard": "^13.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "ava": {
    "files": [
      "packages/**/__tests__/**/*.js",
      "!**/__fixtures__/**"
    ],
    "verbose": true,
    "require": [
      "esm",
      "./packages/common/src/silence-logging.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "packages/**/__fixtures__/**"
    ]
  }
}
