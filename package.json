{
  "name": "create-figma-plugin",
  "private": true,
  "scripts": {
    "clean": "rimraf .nyc_output '*.log' 'packages/**/__fixtures__/**/build' 'packages/**/__fixtures__/**/figma-plugin' 'packages/**/__fixtures__/**/manifest.json'",
    "coverage": "nyc ava",
    "fix": "prettier-standard 'packages/**/*.js' '!packages/**/__fixtures__/**/build/**/*.js' '!packages/init/**/templates/**/*.js'",
    "lerna-clean": "lerna clean",
    "lerna-version": "lerna version",
    "lerna-publish": "lerna publish from-package",
    "lint": "standard 'packages/**/*.js'",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "esm": "^3.2.25",
    "husky": "^3.0.1",
    "lerna": "^3.16.2",
    "lint-staged": "^9.2.0",
    "nyc": "^14.1.1",
    "prettier-standard": "^9.1.1",
    "rimraf": "^2.6.3",
    "standard": "^13.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "ava": {
    "files": [
      "packages/**/__tests__/**/*.js",
      "!packages/**/__tests__/__fixtures__/**/*.js"
    ],
    "verbose": true,
    "require": [
      "esm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "packages/**/__fixtures__/**/build/**/*.js",
      "!packages/init/**/templates/**/*.js"
    ]
  }
}
