{
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "bump-dependencies": "node scripts/bump-dependencies.js",
    "clean": "lerna run clean && rimraf '*.log'",
    "insert-toc": "node scripts/insert-toc.js",
    "fix": "lerna run fix && prettier-standard 'scripts/**/*.js' && prettier --write '*.json'",
    "lint": "lerna run lint && standardx 'scripts/**/*.js'",
    "postinstall": "yarn run build",
    "publish": "yarn run build && cpy 'docs/**/*.md' README.md packages/create-figma-plugin --parents && lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf node_modules yarn.lock && yarn install && yarn run build",
    "test": "yarn run build && lerna run test",
    "version": "lerna version"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.15.0",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/preact": "^5.3.18",
    "@storybook/source-loader": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@teamsupercell/typings-for-css-modules-loader": "^2.1.1",
    "@types/fs-extra": "^8.1.0",
    "@types/git-user-name": "^2.0.0",
    "@types/inquirer": "^6.5.0",
    "@types/mustache": "^4.0.1",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/npmlog": "^4.1.2",
    "@types/rimraf": "^3.0.0",
    "@types/sade": "^1.6.0",
    "@types/tap": "^14.10.0",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chokidar-cli": "^2.1.0",
    "cpy-cli": "^3.1.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "markdown-toc": "^1.2.0",
    "mkdirp": "^1.0.4",
    "npm-check-updates": "^4.1.2",
    "nyc": "^15.0.1",
    "preact": "^10.4.1",
    "prettier": "^2.0.5",
    "prettier-standard": "^16.3.0",
    "rimraf": "^3.0.2",
    "standardx": "^5.0.0",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "tap": "^14.10.7",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^2.3.0"
  },
  "eslintConfig": {
    "globals": {
      "figma": true
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "indent": "off",
      "no-console": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "standardx",
      "prettier-standard"
    ],
    "*.scss": [
      "stylelint",
      "prettier"
    ]
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
