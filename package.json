{
  "private": true,
  "scripts": {
    "build": "yarn run clean && lerna exec -- babel src --copy-files --delete-dir-on-start --out-dir lib --root-mode upward",
    "clean": "rimraf .nyc_output '*.log' 'packages/*/lib' 'packages/**/fixtures/**/{build,figma-plugin,manifest.json}'",
    "coverage": "yarn run build && nyc --exclude 'packages/*/lib' -- ava",
    "fix": "prettier-standard '*.js' 'packages/*/{src,test}/**/*.js'",
    "lint": "standard '*.js' 'packages/*/{src,test}/**/*.js'",
    "publish": "yarn run build && cpy README.md packages/create-figma-plugin && lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf yarn.lock node_modules && yarn install && yarn run build",
    "test": "yarn run build && ava",
    "version": "lerna version",
    "watch": "chokidar '*.js' 'packages/*/src/**/*.js' --command 'yarn build' --initial --silent"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "ava": "^2.2.0",
    "chokidar-cli": "^1.2.2",
    "cpy-cli": "^2.0.0",
    "esm": "^3.2.25",
    "husky": "^3.0.1",
    "lerna": "^3.16.2",
    "lint-staged": "^9.2.0",
    "nyc": "^14.1.1",
    "prettier-standard": "^9.1.1",
    "rimraf": "^2.6.3",
    "standard": "^13.0.2"
  },
  "ava": {
    "files": [
      "packages/*/test/**/*.js",
      "!**/fixtures/**"
    ],
    "verbose": true,
    "require": [
      "esm",
      "./packages/common/src/silence-logging.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
