{
  "name": "create-figma-plugin",
  "private": true,
  "scripts": {
    "fix": "prettier-standard 'packages/**/*.js'",
    "lerna-clean": "lerna clean",
    "lerna-version": "lerna version",
    "lerna-publish": "lerna publish from-package",
    "lint": "standard 'packages/**/*.js'"
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "lerna": "^3.16.2",
    "lint-staged": "^9.2.0",
    "prettier-standard": "^9.1.1",
    "standard": "^13.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "git add"
    ]
  }
}
